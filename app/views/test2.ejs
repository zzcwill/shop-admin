<body>
	<h1>
		<%= title %>
	</h1>

	<h1>接口test2</h1>
	<h2 id="post-multipart">文件上传</h2>
	<h2>
		<input type="file" name="file" accept="image/*" class="dn" id="upImage">
	</h2>
	<br />
	<h2 id="email">发送邮件</h2>
	<br />
	<h2 id="excel">导出excel</h2>
	<h2 id="excel2">导出excel2</h2>
	<br />


	<script>
		$('#post-multipart').bind('click', function () {
			$("#upImage").trigger("click");
		})
		$("#upImage").change(function () {
			var formData = new FormData();
			var _this = this;

			formData.append('file', _this.files[0]);
			formData.append('token', token);


			$.ajax({
				type: "post",
				url: baseUrl + "post/multipart",
				processData: false,
				contentType: false,
				// contentType: 'multipart/form-data',
				data: formData,
				success: function (res) {
					console.log(res);
				},
				error: function () {
				}
			});
		})



		$('#email').bind('click', function () {

			var apiData = {
				token: token,
				title: '邮件test'
			}

			$.ajax({
				type: "post",
				url: baseUrl + "email",
				contentType: 'application/x-www-form-urlencoded',
				data: apiData,
				success: function (res) {
					console.log(res);
				},
				error: function () {
				}
			});
		})

		$('#excel').bind('click', function () {
			var exportUrl = baseUrl + 'excel';
			downLink = exportUrl + '?token=' + token;

			window.open(downLink, "_blank");
		})

		$('#excel2').bind('click', function () {
			var exportUrl = baseUrl + 'excel2';
			downLink = exportUrl + '?token=' + token;

			window.open(downLink, "_blank");
		})

	</script>
</body>

</html>